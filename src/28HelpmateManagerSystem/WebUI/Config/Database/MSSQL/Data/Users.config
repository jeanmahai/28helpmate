<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <sqls name="Users_Query" connection="MSSQLReadService">
    <![CDATA[[Helpmate].[dbo].[QueryUser]]]>
  </sqls>
  <sqls name="Users_GetBySysNo" connection="MSSQLReadService">
    <![CDATA[SELECT [SysNo]
      ,[UserID]
      ,[UserPwd]
      ,[UserName]
      ,[SecurityQuestion1]
      ,[SecurityAnswer1]
      ,[SecurityQuestion2]
      ,[SecurityAnswer2]
      ,[Phone]
      ,[QQ]
      ,[Status]
      ,[RegIP]
      ,[RegDate]
      ,[PayUseBeginTime]
      ,[PayUseEndTime]
  FROM [Helpmate].[dbo].[Users] WHERE [SysNo] = @SysNo]]>
  </sqls>
  <sqls name="Users_UpdateStatus" connection="MSSQLWriteService">
    <![CDATA[UPDATE [Helpmate].[dbo].[Users] SET [Status] = @Status WHERE [SysNo] = @SysNo]]>
  </sqls>
  <sqls name="Users_Delete" connection="MSSQLWriteService">
    <![CDATA[DELETE FROM [Helpmate].[dbo].[Users] WHERE [SysNo] = @SysNo]]>
  </sqls>
</configuration>